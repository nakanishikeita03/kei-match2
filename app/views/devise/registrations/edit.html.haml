.userEditPage
  .EditHeader#aaa アカウント編集
  .userEditPage-container.container.mt-5
    = form_for current_user, url: registration_path(current_user) do |f|
      %label.rounded-circle.userProfileImg{:for => "file_photo"}
        .userProfileImg_description 画像の変更
        %i.fas.fa-portrait.fa-3x
      #userImgPreview.userImgPreview
        %img#thumbnail.userImgPreview_content{:accept => "image/*", :src => ""}/
        %p.userImgPreview_text 画像を変更済み
        = f.file_field :img_name, id: "file_photo"
      .form-group
        = f.label '名前'
        = f.text_field :name, class: "form-control"
      .form-group
        = f.label '自己紹介'
        = f.text_area :self_introduction, class: "form-control", rows: "5"
      .form-group
        = f.label 'パスワードを入力してください'
        = f.password_field :current_password, class: "form-control", autocomplete: "off"
      .text-center
        = f.submit '更新', class: "btn submitBtn"
