.header
  .header-container.d-flex.justify-content-between.mx-auto.p-3
    .header-left.d-flex
      .header-logo
        = link_to(posts_path) do
          Go-En
      .header-line
      .header-icon
        = link_to about_path do
          about
    .header-center
      .fuzzy_search
      = form_tag(root_path,method: :get) do
        %label.fuzzy_search__label
          = submit_tag 'search', :name => nil,class:"fuzzy_search__label--btn"
        = text_field_tag :search, "",id:"fuzzy_search__field",class:"fuzzy_search__field",placeholder:"検索"
      #fuzzy_search__result.m-3
    .header-right
      - if signed_in?
        .header-link
          .header-link__icon
            = link_to new_group_path do
              = fa_icon 'heart'
          .header-link__icon
            = link_to user_path(current_user.id) do
              = fa_icon 'user'
      - else
        %ul.signin-btns
          %li
            = link_to "会員登録", sign_up_path, class: "btn registration"
          %li
            = link_to "ログイン", new_user_session_path, class: "btn login"
